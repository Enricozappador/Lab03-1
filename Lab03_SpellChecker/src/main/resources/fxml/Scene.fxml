<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.spellchecker.FXMLController">
   <top>
      <Label text="Lab03_SpellChecker" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="15.0">
               <children>
                  <Label text="Choose the Language : ">
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="Languagebtn" onAction="#handlelanguage" promptText="Choose the Language" />
               </children>
            </HBox>
            <TextArea fx:id="testotxt" promptText="Inserisci qui la tua frase...">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextArea>
            <HBox alignment="TOP_RIGHT" spacing="15.0">
               <children>
                  <Button fx:id="Checkbtn" mnemonicParsing="false" onAction="#handlecheck" text="Spell Check" />
               </children>
               <VBox.margin>
                  <Insets right="15.0" />
               </VBox.margin>
            </HBox>
            <Label text="Wrong Words">
               <VBox.margin>
                  <Insets left="15.0" />
               </VBox.margin>
            </Label>
            <TextArea fx:id="resulttxt" editable="false">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextArea>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Button fx:id="Clearnbtn" mnemonicParsing="false" onAction="#handleClear" text="Clear Text">
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Label fx:id="timelbl" text="Label">
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" />
               </VBox.margin>
            </Label>
         </children>
         <opaqueInsets>
            <Insets top="10.0" />
         </opaqueInsets>
         <padding>
            <Insets top="15.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
